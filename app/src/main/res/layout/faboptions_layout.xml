<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="98dp"
    android:background="@null"
    tools:parentTag="my.vinhtv.androidcanvas.FabOptionsView">

    <View
        android:id="@+id/faboptions_background"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:background="@drawable/faboptions_background"/>

    <LinearLayout
        android:id="@+id/faboptions_button_container"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:clipChildren="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingEnd="8dp"
        android:paddingStart="8dp">
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:focusable="true"
            android:src="@drawable/faboptions_avd_copy"
            android:background="@null"
            android:foreground="?attr/selectableItemBackgroundBorderless" />
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:focusable="true"
            android:src="@drawable/faboptions_avd_cut"
            android:background="@null"
            android:foreground="?attr/selectableItemBackgroundBorderless" />
        <View
            android:layout_width="56dp"
            android:layout_height="56dp"/>
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:focusable="true"
            android:src="@drawable/faboptions_avd_delete"
            android:background="@null"
            android:foreground="?attr/selectableItemBackgroundBorderless" />
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:focusable="true"
            android:src="@drawable/faboptions_avd_share"
            android:background="@null"
            android:foreground="?attr/selectableItemBackgroundBorderless" />
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/faboptions_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/faboptions_icon"
        android:backgroundTint="@color/google_plus_lt"/>

</merge>